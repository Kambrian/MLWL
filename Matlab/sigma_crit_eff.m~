function sig=noise_eff(zl,dz)
%effective noise for S/N calculation, for lens zl, buffer zone width dz
%sigc_eff=1/sum(w_i)=1/sum(1/sigma_i^2);

f=@(z) sigma_crit(0.3,0.7,zl,z)./(1+z).*source_zdistr(z);
nf=@(z) f(z)/f(zl+0.5);
% g=@(z) source_zdistr(z);
sig=quad(nf,zl+0.1,20)*f(zl+0.5);
sig=1/sqrt(sig);
